# ben configuration file for ghc6 transition

mirror = "http://ftp.fr.debian.org/debian";
suite = "unstable";
areas = [ "main"; "contrib"; "non-free" ];

architectures = [
    "alpha"; "amd64"; "armel";
    "hppa"; "i386"; "ia64";
    "kfreebsd-amd64"; "kfreebsd-i386";
    "mips"; "mipsel"; "powerpc"; "s390"; "sparc"
];

is_affected = .build-depends ~ /ghc6/
            | .depends ~ /ghc6/
            | .package ~ /haskell/;
is_good = .package ~ /./;
is_bad = .edos-debcheck ~ /uninstallable/;
